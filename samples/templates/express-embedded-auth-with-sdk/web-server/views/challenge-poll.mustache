<!DOCTYPE html>
<html>
  <head>
    {{>head}}
  </head>
  <body id="samples">
  
    {{>menu}}

    <div class="okta-sign-in-form ui center aligned relaxed grid">
      <div class="row">
        <div id="page-title-header" class="ui header">
          <h2>{{title}}</h2>
        </div>
      </div>
      {{>errors}}

      <div class="row">
        {{>formMessages}}
      </div>

      {{#canResend}}
        <form id="resend-code-form" class="ui form" action="{{resendAction}}" method="POST">
          <button id="resend-button" class="ui fluid submit button" type="submit">
            Resend
          </button>
        </form>
      {{/canResend}}

      <div class="row">
      {{>cancel}}
      </div>
    </div>
    {{#poll.refresh}}
      <script type="text/javascript">
        function poll(refresh) {
          setTimeout(function () {
            fetch('{{{action}}}', {
              method: 'POST'
            }).then(response => {
              if (response.ok) {
                return response.json();
              } else {
                console.error('Poll request failed: ', response.statusText);
              }
            })
            .then(nextStep => {
              if (nextStep.poll) {
                poll(nextStep.poll.refresh);
              } else {
                window.location.href = nextStep.nextRoute
              }
            });
          }, refresh)
        }
        poll({{poll.refresh}});
      </script>
    {{/poll.refresh}}
  </body>
</html>
